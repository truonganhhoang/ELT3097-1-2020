<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#fff">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifwelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="81dp"
        android:layout_marginLeft="81dp"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:background="@drawable/gifwelcome" />

    <TextView
        android:id="@+id/layout_subtitle"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gifwelcome"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:gravity="center"
        android:text="Học ngoại ngữ dễ dàng."
        android:textColor="@color/empty_view"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/layout_subtitle_2"
        android:layout_width="135dp"
        android:layout_height="27dp"
        android:layout_below="@+id/layout_subtitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="145dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="147dp"
        android:layout_marginRight="147dp"
        android:gravity="center"
        android:text="Miễn phí."
        android:textColor="@color/empty_view"
        android:textSize="20sp" />

    <Button
        android:id="@+id/startbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/get_started_button"
        android:text="BẮT ĐẦU NGAY"
        android:textColor="@color/white_text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/log_in_link_button"
        android:text="TÔI ĐÃ CÓ TÀI KHOẢN"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/green_button"/>

</RelativeLayout>