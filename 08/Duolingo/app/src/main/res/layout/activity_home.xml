<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#232321">

    <RelativeLayout

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:padding="16dp"
        android:background="@drawable/gray_bottom_border">
            <Button
                android:layout_width="90dp"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="350px" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="700px"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1050px" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <include
                    layout="@layout/activity_custom_progressbar"
                    />

                <Button
                    android:id="@+id/list_one"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/btn_circle"
                    android:textColor="#fff"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/quatrungtim"
                    />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_one"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="177dp"
                    android:text="Cơ bản 1"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white_text"

                    />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <RelativeLayout

                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    
                    android:layout_weight="1">

                    <include layout="@layout/activity_custom_progressbar" />

                    <Button
                        android:id="@+id/list_two"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_circle"
                        android:drawableTop="@drawable/quatrungtim"
                        android:textColor="#fff" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/list_two"
                        android:layout_marginLeft="68dp"
                        android:layout_marginTop="10dp"
                        android:text="Cơ bản 2"
                        android:textAllCaps="false"
                        android:textColor="@color/white_text"
                        android:textStyle="bold"

                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1">


                    <include layout="@layout/activity_custom_progressbar" />

                    <Button
                        android:id="@+id/list_three"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_circle"
                        android:drawableTop="@drawable/quatrungtim"
                        android:textColor="#fff" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/list_three"
                        android:layout_marginLeft="68dp"
                        android:layout_marginTop="10dp"
                        android:text="Cơ bản 3"
                        android:textAllCaps="false"
                        android:textColor="@color/white_text"
                        android:textStyle="bold"

                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp">


                    <include layout="@layout/activity_custom_progressbar"/>
                    <Button
                        android:id="@+id/list_four"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/btn_circle"
                        android:textColor="#fff"
                        android:layout_centerInParent="true"
                        android:drawableTop="@drawable/quatrungxanh"
                        />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/list_four"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="68dp"
                        android:text="Cơ bản 4"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@color/white_text"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp">

                    <include layout="@layout/activity_custom_progressbar"/>
                    <Button
                        android:id="@+id/list_five"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/btn_circle"
                        android:textColor="#fff"
                        android:layout_centerInParent="true"
                        android:drawableTop="@drawable/quatrungxanh"
                        />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/list_five"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="68dp"
                        android:text="Cơ bản 5"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@color/white_text"

                        />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="8dp">

                <include layout="@layout/activity_custom_progressbar"/>
                <Button
                    android:id="@+id/list_commu"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/btn_circle"
                    android:textColor="#fff"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/quatrungbantay"
                    />
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_commu"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="177dp"
                    android:text="Chào hỏi"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white_text"

                    />

            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp">


                <include layout="@layout/activity_custom_progressbar"/>
                <Button
                    android:id="@+id/list_food"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/btn_circle"
                    android:textColor="#fff"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/quatrungxanh"
                    />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_food"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="68dp"
                    android:text="Thức ăn"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white_text"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp">

                <include layout="@layout/activity_custom_progressbar"/>
                <Button
                    android:id="@+id/list_animal"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/btn_circle"
                    android:textColor="#fff"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/quatrungxanh"
                    />
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_animal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="68dp"
                    android:text="Động vật"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white_text"

                    />


            </RelativeLayout>
        </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gray_top_border"
        >

        <Button
            android:layout_width="104dp"
            android:layout_height="match_parent"
             />

        <Button
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350px" />

        <Button
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="700px" />

        <Button
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1050px" />

    </RelativeLayout>


</RelativeLayout>