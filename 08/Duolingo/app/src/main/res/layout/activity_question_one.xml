<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="2"
    android:layout_column="3"
    android:background="#F8FFFCFC"
    tools:context=".LoginActivity"
    tools:ignore="Deprecated">


    <Button
        android:id="@+id/dapan1"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_above="@+id/dapan3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="17dp"
        android:layout_x="22dp"
        android:layout_y="141dp"
        android:background="@drawable/button_selecter"
        android:drawableTop="@drawable/tea"
        android:paddingTop="10dp"
        android:text="tea"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="32dp" />

    <Button
        android:id="@+id/dapan2"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_above="@+id/dapan4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="17dp"
        android:layout_x="207dp"
        android:layout_y="140dp"
        android:background="@drawable/button_selecter"
        android:drawableTop="@drawable/coffee"
        android:paddingTop="10dp"
        android:text="cafe"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/layout1"
        app:layout_constraintEnd_toStartOf="@+id/dapan4"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="43dp" />

    <Button
        android:id="@+id/dapan3"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="121dp"
        android:layout_x="22dp"
        android:layout_y="333dp"
        android:background="@drawable/button_selecter"
        android:drawableTop="@drawable/rice"
        android:paddingTop="10dp"
        android:text="rice"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/dapan4"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="32dp" />

    <Button
        android:id="@+id/dapan4"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="121dp"
        android:layout_x="207dp"
        android:layout_y="333dp"
        android:background="@drawable/button_selecter"
        android:drawableTop="@drawable/food"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:text="food"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/layout1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="42dp" />

    <Button

        android:id="@+id/kiemtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="22dp"
        android:layout_x="23dp"
        android:layout_y="553dp"
        android:background="@drawable/button_check"
        android:enabled="false"
        android:text="kiểm tra"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="25dp" />

    <include
        android:id="@+id/bar"
        layout="@layout/activity_progressbar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar"
        android:layout_marginTop="30dp"
        android:layout_x="28dp"
        android:layout_y="72dp"
        android:text='Đâu là "Trà"?'
        android:textColor="#070707"
        android:textSize="25dp"
        android:textStyle="bold" />

    <include
        layout="@layout/activity_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>