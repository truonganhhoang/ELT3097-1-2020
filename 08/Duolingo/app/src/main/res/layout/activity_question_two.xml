<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:drawingCacheQuality="auto"
    tools:context=".LoginActivity">

    <include
        android:id="@+id/include"
        layout="@layout/activity_progressbar" />

    <TextView
        android:id="@+id/yeucau"
        android:layout_width="282dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:text="Chọn bản dịch đúng"
        android:textSize="25sp"
        android:textColor="#070707"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133"
        tools:ignore="ExtraText" />

    <TextView
        android:id="@+id/cauhoi"
        android:layout_width="263dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="Tôi thích bạn."
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.208" />

    <Button
        android:id="@+id/dapan1"
        android:layout_width="286dp"
        android:layout_height="55dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/button_selecter"
        android:text="I eat you."
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/layout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cauhoi"
        app:layout_constraintVertical_bias="0.415" />

    <Button
        android:id="@+id/dapan2"
        android:layout_width="286dp"
        android:layout_height="55dp"
        android:layout_marginBottom="224dp"
        android:background="@drawable/button_selecter"
        android:text="I like you."
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dapan1"
        app:layout_constraintVertical_bias="0.422" />

    <Button
        android:id="@+id/dapan3"
        android:layout_width="286dp"
        android:layout_height="55dp"
        android:layout_marginBottom="152dp"
        android:background="@drawable/button_selecter"
        android:text="I drink you."
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dapan2"
        app:layout_constraintVertical_bias="0.425" />

    <Button

        android:id="@+id/kiemtra"
        android:layout_width="363dp"
        android:layout_height="41dp"
        android:layout_marginBottom="22dp"
        android:layout_x="23dp"
        android:layout_y="553dp"
        android:background="@drawable/button_unselected"
        android:enabled="false"
        android:text="kiểm tra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        layout="@layout/activity_check"
        android:layout_width="413dp"
        android:layout_height="138dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
