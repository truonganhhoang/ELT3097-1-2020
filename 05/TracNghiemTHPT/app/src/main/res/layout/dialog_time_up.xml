<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardBackgroundColor="@color/red"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="326dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        android:paddingTop="@dimen/margin_medium"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/warning_time_up"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_title"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:contentDescription="@string/end_quiz"
            android:src="@drawable/ic_info_outline"
            android:layout_gravity="center"
            android:layout_width="86dp"
            android:layout_height="86dp" />
        <TextView
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium"
            android:paddingTop="@dimen/margin_medium"
            android:paddingBottom="3dp"
            android:text="@string/time_up_message"
            android:lineSpacingExtra="@dimen/line_spacing_extra"
            android:gravity="center"
            android:textSize="@dimen/text_size_data"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/btnDlTimeUpOK"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            android:textAllCaps="false"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>