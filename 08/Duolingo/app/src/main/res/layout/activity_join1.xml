<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.join.Join1">
    <include layout="@layout/activity_progressbar"
        android:id="@+id/bar"/>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="369dp"
        android:layout_height="35dp"
        android:layout_below="@+id/bar"
        android:layout_marginTop="30dp"
        android:text="Bạn biết tới duolingo qua đâu?"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/first_choice"
        android:onClick="openActivityChild"
        android:paddingVertical="10dp"
        android:text="Tìm trên web"
        android:textAllCaps="false"
        android:textColor="@color/custom_view_text_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="-1dp"
        android:layout_below="@id/question_1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/choice_view"
        android:paddingVertical="10dp"
        android:text="TV"
        android:textAllCaps="false"
        android:textColor="@color/custom_view_text_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question_3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="-1dp"
        android:layout_below="@id/question_2"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/choice_view"
        android:text="Tin tức, báo hoặc blog"
        android:textStyle="bold"
        android:textColor="@color/custom_view_text_color"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        android:paddingVertical="10dp"
        android:onClick="openActivityChild"/>

    <TextView
        android:id="@+id/question_4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="-1dp"
        android:layout_below="@id/question_3"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/choice_view"
        android:text="Gia đình và bạn bè"
        android:textStyle="bold"
        android:textColor="@color/custom_view_text_color"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        android:paddingVertical="10dp"
        android:onClick="openActivityChild"/>

    <TextView
        android:id="@+id/question_5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="-1dp"
        android:layout_below="@id/question_4"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/choice_view"
        android:text="Mạng xã hội"
        android:textStyle="bold"
        android:textColor="@color/custom_view_text_color"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        android:paddingVertical="10dp"
        android:onClick="openActivityChild"/>

    <TextView
        android:id="@+id/question_6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="-1dp"
        android:layout_below="@id/question_5"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/choice_view"
        android:text="Đài phát thanh"
        android:textStyle="bold"
        android:textColor="@color/custom_view_text_color"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        android:paddingVertical="10dp"
        android:onClick="openActivityChild"/>

    <TextView
        android:id="@+id/question_7"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="-1dp"
        android:layout_below="@id/question_6"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/choice_view"
        android:text="Quảng cáo trực tuyến"
        android:textStyle="bold"
        android:textColor="@color/custom_view_text_color"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        android:paddingVertical="10dp"
        android:onClick="openActivityChild"/>

    <TextView
        android:id="@+id/question_8"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="-1dp"
        android:layout_below="@id/question_7"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/choice_view"
        android:text="Cửa hàng ứng dụng"
        android:textStyle="bold"
        android:textColor="@color/custom_view_text_color"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        android:paddingVertical="10dp"
        android:onClick="openActivityChild"/>

    <TextView
        android:id="@+id/question_9"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="-1dp"
        android:layout_below="@id/question_8"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/last_choice"
        android:text="Khác"
        android:textStyle="bold"
        android:textColor="@color/custom_view_text_color"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        android:paddingVertical="10dp"
        android:onClick="openActivityChild"/>


</RelativeLayout>