<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/greenLight">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="@dimen/margin_medium"
            android:text="Phiếu kết quả"
            android:textAllCaps="true"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/margin"
            tools:text="Ngày thi: 28/05/2018"
            android:textColor="@color/black"
            android:id="@+id/tvSDate"
            android:textSize="@dimen/text_size_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvSExam"
            tools:text="Đề số 1"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/margin_medium"
            android:textSize="@dimen/text_size_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_margin="@dimen/margin_medium"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvSTrue"
                    tools:text="Đúng: 30"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:textSize="@dimen/text_size_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvSFalse"
                    tools:text="Sai: 30"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:textSize="@dimen/text_size_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvSUnAns"
                    tools:text="Chưa trả lời: 30"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:textSize="@dimen/text_size_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvSScore"
                android:gravity="center"
                tools:text="8.0"
                android:textColor="@color/red"
                android:textSize="36sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/greenDark"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/btnDLClose"
            android:text="@string/close"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_title"
            android:textAllCaps="false"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v7.widget.CardView>