<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_selected="true">
        <shape android:shape="rectangle" >
            <stroke
                android:width="2dp"
                android:color="#84d7ff" />

            <corners
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"/>

            <solid android:color="#ddf3fe" />

            <padding android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:width="2dp"
                android:color="@color/empty_view" />

            <corners
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"/>

            <solid android:color="@color/white_text" />

            <padding android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>