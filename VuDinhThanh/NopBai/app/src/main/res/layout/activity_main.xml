<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="2"
    android:layout_column="3"
    android:background="#F8FFFCFC"
    tools:context=".MainActivity"
    tools:ignore="Deprecated">

    <Button
        android:id="@+id/back"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="69dp"
        android:layout_height="42dp"
        android:layout_x="14dp"
        android:layout_y="16dp"
        android:background="#FFFFFF"
        android:drawableTop="@drawable/back"
        android:textColor="#848A8A"
        android:textSize="32sp" />

    <Button
        android:id="@+id/dapan1"
        android:layout_width="162dp"
        android:layout_height="165dp"
        android:layout_x="22dp"
        android:layout_y="141dp"
        android:background="@drawable/custom_botton"
        android:drawableTop="@drawable/cake"
        android:paddingTop="10dp"
        android:text="cake"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/dapan2"
        android:layout_width="162dp"
        android:layout_height="170dp"
        android:layout_x="208dp"
        android:layout_y="140dp"
        android:drawableTop="@drawable/cf"
        android:paddingTop="10dp"
        android:background="@drawable/custom_botton"
        android:textAllCaps="false"
        android:text="cafe" />

    <Button
        android:id="@+id/dapan3"
        android:layout_width="160dp"
        android:layout_height="170dp"
        android:layout_x="22dp"
        android:layout_y="332dp"
        android:background="@drawable/custom_botton"
        android:drawableTop="@drawable/rc"
        android:paddingTop="10dp"
        android:text="rice"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/dapan4"
        android:layout_width="160dp"
        android:layout_height="168dp"
        android:layout_x="207dp"
        android:layout_y="333dp"
        android:background="@drawable/custom_botton"
        android:drawableTop="@drawable/br"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:text="bread"
        android:textAllCaps="false" />

    <Button

        android:id="@+id/kiemtra"
        android:layout_width="360dp"
        android:layout_height="41dp"
        android:layout_x="26dp"
        android:layout_y="600dp"
        android:background="@drawable/custom_botton1"
        android:enabled="false"
        android:text="kiểm tra" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="277dp"
        android:layout_height="13dp"
        android:layout_x="109dp"
        android:layout_y="29dp"
        android:background="@drawable/custom_seek"
        android:max="100"
        android:progress="40"
        android:progressTint="#1ABA20" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="28dp"
        android:layout_y="72dp"
        android:text='Đâu là "Bánh"?'
        android:textColor="#DD000000"
        android:textSize="22dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="415dp"
        android:layout_height="153dp"
        android:layout_x="-1dp"
        android:layout_y="535dp"
        android:background="#5BE160"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/check"
            android:layout_width="190dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="217dp"
            android:layout_marginBottom="93dp"
            android:text="Giỏi Lắm!"
            android:textSize="17dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tieptuc"
            android:layout_width="361dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="34dp"
            android:background="@drawable/custom_tiep"
            android:text="Tiếp Tục"
            android:textColor="#FFFF" />


    </RelativeLayout>


</AbsoluteLayout>