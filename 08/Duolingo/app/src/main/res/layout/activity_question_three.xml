<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".question.QuestionThree">
    <include
        layout="@layout/activity_progressbar"
        android:id="@+id/bar"/>

    <EditText
        android:id="@+id/et_input"
        android:layout_width="385dp"
        android:layout_height="139dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/custom_botton"
        android:hint="answer"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/ques"
        android:layout_width="354dp"
        android:layout_height="42dp"
        android:layout_below="@+id/bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:text="Điền vào những gì bạn nghe"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bt_convert"
        android:layout_width="141dp"
        android:layout_height="134dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ques"
        android:background="@drawable/soundd"

        />

    <Button

        android:id="@+id/kiemtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="22dp"
        android:layout_x="23dp"
        android:layout_y="553dp"
        android:background="@drawable/button_check"
        android:enabled="false"
        android:text="kiểm tra"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="25dp" />

    <include
        layout="@layout/activity_check"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp" />


</RelativeLayout>